+
+    const item = await Item.findById(itemId);
+    if (!item) {
+      return res.status(404).json({ error: 'Not Found', message: 'Item not found' });
+    }
+
+    // Check if user already on waitlist for this item
+    const existing = await Waitlist.findOne({
